<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>
    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('assets/img/main-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Easy Blog</h1>
                            <span class="subheading">A place for sharing!</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <% for(let i = 0; i < allPosts.length; i++) { %>
                        <div class="post-preview">
                            <a href="/post/<%= allPosts[i]._id%>">
                                <h2 class="post-title">
                                    <%= allPosts[i].title %>
                                </h2>
                                <h3 class="post-subtitle">
                                    <%- allPosts[i].body %>
                                </h3>
                            </a>
                            <p class="post-mete">Posted by
                                <a href="#"><%= allPosts[i].userid.username %></a>
                                on <%= allPosts[i].createdAt.toDateString() %>
                            </p>
                        </div>
                        <hr>
                    <%}%>
                </div>
            </div>
        </div>
         <!-- Footer-->
        <%- include('layouts/footer'); -%>
        <!-- JS-->
        <%- include('layouts/scripts'); -%>
    </body>
</html>
