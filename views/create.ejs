<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/header'); -%>
  <body>
    <!-- Header-->
      <header class="main-header">
          <!-- Nav-->
          <%- include('layouts/navbar'); -%>
          <!--Section-->
          <section>
              <div class="marketing">
                <h1>Create New Post</h1>
                <p>Living the dream!</p>
              </div>
          </section>
      </header>
      <!-- Main-->
      <main>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
             <% if(errors !== null && errors.length > 0) { %>
              <ul class="list-group">
              <% for (let i = 0; i < errors.length; i++) { %>
                <li class="list-group-item list-group-item-danger"><%= errors[i] %></li>
                <% } %>
                </ul>
              <% } %>
            <form action="/posts/store" method="POST" enctype="multipart/form-data" class="mt-5">
              <div class="form-floating mb-3">
                <input type="text" class="form-control" placeholder="Title" id="title" name="title" value="<%= title %>">
                <label for="floatingInput">Title</label>
              </div>
              <div class="mb-3">
                <textarea class="form-control" type="text" rows="5" id="content" name="content"><%= content %></textarea>
                <script>
                    $('#content').summernote({
                      placeholder: 'Hello word!',
                      tabsize: 2,
                      height: 200
                    });
                  </script>
              </div>
              <div class="fileInput">
                <input type="file" class="form-control form-control-lg" id="image" name="image"/>
              </div>
              <br />
              <div id="success" class="d-flex justify-content-center justify-content-md-end mb-3">
                <button type="submit" class="btn-lg btn-dark">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <hr>
    </main>
    <!-- Footer-->
    <%- include('layouts/footer'); -%>
    <!-- JS-->
    <%- include('layouts/scripts'); -%>
  </body>
</html>
